<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginRight="100dp"
        android:text="0"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/ResetAll"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/ResetAll"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="Reset All"
        app:layout_constraintLeft_toLeftOf="@id/text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"/>

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/Boton1"
        android:layout_marginEnd="100dp"
        app:layout_constraintTop_toTopOf="@id/Boton1"/>

    <Button
        android:id="@+id/Boton1"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="+1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/Reset1"
        app:layout_constraintTop_toTopOf="@id/ResetAll"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="60dp"/>


    <Button
        android:id="@+id/Reset1"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="Reset"
        app:layout_constraintLeft_toLeftOf="@id/Boton1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="110dp"
        app:layout_constraintTop_toTopOf="@id/ResetAll"
        android:layout_marginTop="140dp"/>



    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/Boton2"
        android:layout_marginEnd="100dp"
        app:layout_constraintTop_toTopOf="@id/Boton2"/>

    <Button
        android:id="@+id/Boton2"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="+1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/Reset1"
        app:layout_constraintTop_toTopOf="@id/Boton1"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="60dp"/>


    <Button
        android:id="@+id/Reset2"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="Reset"
        app:layout_constraintLeft_toLeftOf="@id/Boton2"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="110dp"
        app:layout_constraintTop_toTopOf="@id/Reset1"
        android:layout_marginTop="140dp"/>


    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/Boton3"
        android:layout_marginEnd="100dp"
        app:layout_constraintTop_toTopOf="@id/Boton3"/>

    <Button
        android:id="@+id/Boton3"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="+1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/Reset1"
        app:layout_constraintTop_toTopOf="@id/Boton2"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="60dp"/>


    <Button
        android:id="@+id/Reset3"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="Reset"
        app:layout_constraintLeft_toLeftOf="@id/Boton2"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="110dp"
        app:layout_constraintTop_toTopOf="@id/Reset2"
        android:layout_marginTop="140dp"/>


    <TextView
        android:id="@+id/text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/Boton4"
        android:layout_marginEnd="100dp"
        app:layout_constraintTop_toTopOf="@id/Boton4"/>

    <Button
        android:id="@+id/Boton4"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="+1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/Reset1"
        app:layout_constraintTop_toTopOf="@id/Boton3"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="60dp"/>


    <Button
        android:id="@+id/Reset4"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="Reset"
        app:layout_constraintLeft_toLeftOf="@id/Boton3"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="110dp"
        app:layout_constraintTop_toTopOf="@id/Reset3"
        android:layout_marginTop="140dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
